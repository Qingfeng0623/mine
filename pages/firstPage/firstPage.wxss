  background-color: #E8E8E8;  
  
}

.rank{    
  position: left;
  margin: auto; 
}

.rankIma{ /* 统计图片 */
  width: 50px;
  height: 50px;
  padding-left: 5px;
}

.rankBut{
  padding: 0px;
  background-color: #E8E8E8;
  font-size: 15px;
  width: 60px;
  line-height: 20px;
  /* border-color: transparent; */
  border-style: none;
}

.show{    
  position: right;
  margin: auto;
}

.showIma{ /*外观图片*/
  width: 50px;
  height: 50px;
  padding-left: 5px;
}

.showBut{
  padding: 0px;
  background-color: #E8E8E8;
  font-size: 15px;
  width: 60px;
  line-height: 20px;
  letter-spacing: 5px; 
  padding-left: 5px;
  border:none;
  
}